generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Professor {
  id           Int      @id @default(autoincrement())
  nomeCompleto String
  email        String   @unique
  senhaHash    String
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  Alunos       Aluno[]
  roles        Role     @default(Professor)

  @@map("professores")
}

model Aluno {
  id                   Int       @id @default(autoincrement())
  nomeCompleto         String
  email                String    @unique
  senhaHash            String
  createdAt            DateTime  @default(now())
  updatedAt            DateTime  @updatedAt
  professor            Professor @relation(fields: [professorId], references: [id])
  professorId          Int
  Treinos              Treino[]
  roles                Role      @default(Aluno)

  @@map("alunos")
}

model Treino {
  id         Int @id @default(autoincrement())
  objetivo   ObjetivoTreino
  exercicios exercicio[]
  createdAt  DateTime @default(now())
  aluno      Aluno @relation(fields: [alunoId], references: [id])
  alunoId    Int
  
  @@map("treinos")
}

model exercicio {
  id Int @id @default(autoincrement())
  nome String
  series Int
  repeticoes Int
  tempoDeDescanso Int
  treino Treino @relation(fields: [treinoId], references: [id])
  treinoId Int

  @@map("exercicios")
}

enum Role {
  Professor
  Aluno
}

enum ObjetivoTreino {
  Hipertrofia
  Forca
  Emagrecer
  CondicionamentoFisico
}
